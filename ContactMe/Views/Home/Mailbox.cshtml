@model ContactMe.Models.User

@{
    ViewData["Title"] = "Mailbox Page";
}

<div class="d-flex align-items-center">
        <div class="row">
          <div class="">  
            <h3 id="userName">@Model.FirstName @Model.LastName</h3>
            <h3 class="text-black mt-0 mb-5">This is chat page page.</h3>
          </div>
        </div>
</div>

<div class="text-center">
  <h3 class="display-4">Let's chatting!</h3>
  
  <div class="form-group">
    <br/>
    <input type="text" class="form-control" id="receiver" placeholder="Who do you want to chat?">   
    <br/>
    <input type="text" class="form-control" id="themeOfMessage" placeholder="What the theme of your message?">
    <br/>
    <input type="text" class="form-control" id="messageToSend" placeholder="Write your message here!">
    <br/>
    <input type="button" class="btn btn-primary" id="sendButton" value="Send!"/>
  </div>
</div>

<div id="newMessages"></div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0-preview.2.22153.2/signalr.min.js"></script>
<script src="/js/chat.js"></script>