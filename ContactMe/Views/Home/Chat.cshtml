@model ContactMe.Models.User

@{
    ViewData["Title"] = "Chat Page";
}

<div class="d-flex align-items-center">
        <div class="row">
          <div class="">
            <h4 class="display-2 text-black">@Model.FirstName @Model.LastName</h4>
            <h3 class="text-black mt-0 mb-5">This is chat page page.</h3>
          </div>
        </div>
</div>

<div class="text-center">
  <h3 class="display-4">Select person who you want to chat with:</h3>
    
  <form>
    <div class="form-group">
      <label for="messageToSend">Chat!</label>
      <br/>
      <input type="text" class="form-control" id="messageToSend" placeholder="Write your message here!">
      <br/>
      <button class="btn btn-primary" id="sendButton"><b>Send!</b></button>
    </div>
  </form>
</div>

<script src="/js/WebSocket.js"></script>