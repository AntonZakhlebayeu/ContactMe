@{
    ViewData["Title"] = "Home Page";
}

<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
        <form class="form-inline" asp-controller="Account" asp-action="Logout">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </ul>
</div>

<div class="text-center">
    <h1 class="display-4">Welcome to social network ContactMe!</h1>
    <h3><b>Register or Login to send messages and chat with people.</b></h3>
    <img src="main_logo.png" alt="Chat Logo" style="width: 100%;height: 100%;object-fit: cover;">
</div>