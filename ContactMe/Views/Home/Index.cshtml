@model ContactMe.Models.User

@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex align-items-center">
        <div class="row">
          <div class="">
            <h1 class="display-2 text-black">Hello @Model.FirstName!</h1>
            <h3 class="text-black mt-0 mb-5">This is your profile page.</h3>
          </div>
        </div>
</div>
<form class="form-inline" asp-controller="Account" asp-action="Logout">
    <button type="submit" class="nav-link btn btn-primary text-dark">Logout</button>
</form>

<div class="text-center">
    <h1 class="display-4">You're welcome in social network ContactMe!</h1>
    <h3><b>Choose person, who you want to chat with:</b></h3>
    <img src="https://i.ibb.co/D1YMszH/home-logo.jpg" alt="Home Logo" style="width: 100%;height: 100%;object-fit: cover;">
</div>